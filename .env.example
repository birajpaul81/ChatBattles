# A4F API Configuration
# Get your API key from https://www.a4f.co/
A4F_API_KEY=your_a4f_api_key

# Groq API Configuration (for GPT-5 model)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key

# Google AI API Configuration (for Gemini fallback)
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key

# OpenRouter API Configuration (for fallback models)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key

# Supabase Configuration
# Get these from: Supabase Dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Clerk Configuration
# Get these from: Clerk Dashboard > API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://www.chatbattles.site

# Clerk URLs (usually don't need to change these)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/chat
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/chat
